.userWrapper
  .mypageContent
    .userTitle
      = @user.nickname
      = link_to "編集", edit_user_registration_path, class: "btn btn-link userTitle--edit"
    .userTitle__image
      - if @user.image?
        = image_tag @user.image.url, class: "userTitle__image--user" 
    .userTitle__information
      - if @user.gender_id?
        %p
          = Gender.find(@user.gender_id).name
      - if @user.residence_id?
        %p
          = Prefecture.find(@user.residence_id).name
      = link_to "ログアウト", destroy_user_session_path, method: :delete, data: { confirm: ('本当によろしいですか？') }, class: "btn btn-light userTitle__information__logout"
  .contents
    - @posts.each do |post|
      = render partial: "posts/post", locals: { post: post }
    = paginate(@posts)
