= form_with model: @post, class: :postForm, local: true do |form|
  -# タグ追加
  = form.collection_select :tag_ids, Tag.all, :id, :name, {prompt: "選択してください"}, class: :postForm__tagSelect
  = form.text_field :title, placeholder: :"タイトル ※必須 ", class: :postForm__title
  = form.text_area :content, placeholder: :"本文", class: :postForm__content
  -# = form.fields_for :images do |img|
  -#   = img.file_field :src, class: :postForm__image
  .item-new-images__block__container#image-box-1
  #image-box
    #previews
      - if @post.persisted?
        - @post.images.each_with_index do |image, i|
          = image_tag image.src.url, data: { index: i }, width: "100", height: '100'
    = form.fields_for :images do |img|
      .js-file_group{"data-index" => img.index}
        = img.file_field :src, class: "postForm__image js-file"
        %br/
        %span.js-remove 削除
      - if @post.persisted?
        = img.check_box :_destroy, data:{ index: img.index }, class: 'hidden-destroy'
    - if @post.persisted?
      .js-file_group{"data-index" => @post.images.count}
        = file_field_tag :src, name: "post[images_attributes][#{@post.images.count}][src]", class: 'js-file'
        .js-remove 削除
  = form.submit '送信', class: :postForm__btn
